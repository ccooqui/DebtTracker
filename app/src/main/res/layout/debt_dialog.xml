<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="190dp"
    android:layout_gravity="center">


    <LinearLayout
        android:id="@+id/ll_dialog_call_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:id="@+id/call_dialog_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawablePadding="20dp"
            android:textAlignment="center"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_action_pay"
            android:layout_gravity="start"
            android:text="Add Payment"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/call_dialog_btn"
            android:drawablePadding="20dp"
            android:textAlignment="center"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_action_calling"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:text="Mobile Call"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/edit_btn"
            android:drawablePadding="20dp"
            android:textAlignment="center"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_action_edits"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:text="Edit Debt"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/delete_btn"
            android:drawablePadding="20dp"
            android:textAlignment="center"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_action_trash"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:text="Delete Debt"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>
</RelativeLayout>

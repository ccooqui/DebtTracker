<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="135dp"
    android:layout_gravity="center">


    <LinearLayout
        android:id="@+id/ll_dialog_call_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/call_dialog_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/ic_action_call"
            android:text="Add Payment"
            android:textColor="@color/colorPrimaryDark" />
        <Button
            android:id="@+id/call_dialog_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/ic_action_call"
            android:text="Edit"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/call_dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/ic_action_call"
            android:text="Mobile Call"
            android:textColor="@android:color/holo_orange_light"/>

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_primary_dark"
            android:text="Edit Debt"
            android:textColor="@android:color/holo_orange_light"/>

        <Button
            android:id="@+id/delete_btn"
            android:drawablePadding="20dp"
            android:textAlignment="textStart"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_action_delete"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_primary_dark"
            android:text="Delete Debt"
            android:textColor="@android:color/holo_orange_light"/>

    </LinearLayout>

</RelativeLayout>

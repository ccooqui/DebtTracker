<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@+id/id_Card"
    android:orientation="vertical"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp"
    android:focusable="true">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="15dp">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/colorGray"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date Created:" />
                <TextView
                    android:id="@+id/tvDateCreated"
                    android:textColor="@color/colorGray"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="35dp"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date Created" />

                <TextView
                    android:textColor="@color/colorGray"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Due Date:" />
                <TextView
                    android:id="@+id/tvDueDate"
                    android:textColor="@color/colorGray"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDebtorName"
                    android:text="Due Date" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDebtorName"
                android:textColor="@color/design_default_color_primary_dark"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvBalance"
                android:text="Debtor Name" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvBalance"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balance" />
                <TextView
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_marginTop="5dp"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="/" />

                <TextView
                    android:id="@+id/tvInitialBalance"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Initial Balance" />
                <TextView
                    android:id="@+id/tvDebtNotes"
                    android:textColor="@color/colorGray"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes" />
                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/debt_progress"
                    android:layout_marginTop="20dp"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    custom:donut_progress="0"
                    cardview:donut_finished_color="@color/colorPrimary"/>
            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </android.support.v7.widget.LinearLayoutCompat>


        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




    </RelativeLayout>

</android.support.v7.widget.CardView>
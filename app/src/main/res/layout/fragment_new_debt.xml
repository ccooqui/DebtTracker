<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.NewDebtFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="275dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/recoup_logo" />

            <EditText
                android:id="@+id/etDebtorName"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:hint="* Debtor Name"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:padding="10dp"/>


            <EditText
                android:id="@+id/etPhone"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:hint="* Phone Number"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:inputType="phone" />

            <EditText
                android:id="@+id/etBalance"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:hint="* Amount Currently Paid"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/etInitialBalance"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:hint="* Total Amount Owed"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/etDebtNotes"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:hint="Enter details of debt"
                android:inputType="textMultiLine"
                android:textColor="@color/design_default_color_primary_dark"
                android:textColorHint="@color/design_default_color_primary_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <Spinner
                    android:id="@+id/categorySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:clipChildren="true"
                    android:tag="Type of Debt"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/expiry_date"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/design_default_color_primary_dark" />
            </LinearLayout>

            <Button
                android:id="@+id/btnDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@color/colorAccent"
                android:text="* Choose Due Date"
                android:textColor="@color/colorWhite" />


            <Button
                android:id="@+id/btnCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimaryDark"
                android:text="Add Debt to List"
                android:textColor="@color/colorAccent" />

        </LinearLayout>
    </ScrollView>



</FrameLayout>